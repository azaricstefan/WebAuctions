@model IEnumerable<IEP___projekat_AS.Models.Auction>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


<div class="row">
    @*SEARCH PLACE*@

    <h3>Search for AUCTIONS</h3>
    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()

        <div class="col-md-12">
            <input class="form-control" id="name" name="name" placeholder="Type some keyword here. . ." type="text" value=""></div>

        <hr />

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    }
</div>

<hr />
<div class="row">

    @*zbog centriranja*@
    <div class="col-lg-1"></div>
    @{

        var i = 0;
        foreach (var item in Model)
        {
            if (i++ == 5) //show just 5 auctions
            {
                break;
                @*<div class="col-md-1">&nbsp;</div> => one for end of row and other for new row
                <div class="col-md-1">&nbsp;</div>*@
            }
            <div class="col-lg-2">
                @Html.ActionLink(item.name, "Details", new { id = item.Id })

                <img src="@Html.DisplayFor(modelItem => item.img)" width="100%" height="100%" alt="Picture of subject" /> <br />

                Length: @Html.DisplayFor(modelItem => item.length)<br />
                Start offer: @Html.DisplayFor(modelItem => item.start_offer)<br />
                Current offer: @Html.DisplayFor(modelItem => item.price)<br />
            </div>
        }
    }

    @*zbog centriranja*@
    <div class="col-lg-1"></div>

</div>

<hr />
<p>
    @Html.ActionLink("Create New", "Create")
</p>


