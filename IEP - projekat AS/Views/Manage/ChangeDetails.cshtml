@using IEP___projekat_AS.Models
@model ChangeDetailsViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Manage account details";
}

<h2>Change your account details!</h2>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken();
            <div class="form-group">
                @Html.Label("Name:")@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Surname:")@Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Email:")@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Username:")@Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
            </div>
                        <br />
                        <input type="submit" value="Change" class="btn btn-default" />
                        }
                    </div>
    <div class="col-md-2"></div>
</div>
